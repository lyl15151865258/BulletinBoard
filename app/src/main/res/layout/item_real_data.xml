<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <com.zhongbenshuo.bulletinboard.widget.ClockView
        android:id="@+id/cvRealData"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:color_dial_high="@color/red_600"
        app:color_dial_lower="@color/green_600"
        app:color_dial_middle="@color/orange_600"
        app:stroke_width_dial="@dimen/dp_2"
        app:text_size_dial="@dimen/sp_6"
        app:text_size_value="@dimen/sp_8"
        app:text_title_color="@color/gray_5"
        app:text_title_dial="图表"
        app:text_title_size="@dimen/sp_8" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:background="@drawable/background_normal"
        android:gravity="center"
        android:padding="@dimen/dp_2"
        android:text="正常"
        android:textColor="@color/gray_5"
        android:textSize="@dimen/sp_8" />

</LinearLayout>