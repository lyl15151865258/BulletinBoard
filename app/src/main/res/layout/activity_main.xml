<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_default">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fzzzhf"
        android:padding="@dimen/dp_2"
        android:text="@string/app_title"
        android:textColor="@color/gray_5"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topDivider"
        app:layout_constraintWidth_percent="0.2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fzzzhj"
            android:padding="@dimen/dp_5"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/ivWeather"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fzzzhj"
                android:textColor="@color/gray_5"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fzzzhj"
                android:textColor="@color/gray_5"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="@font/fzzzhj"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/fzzzhj"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fzzzhf"
            android:text="诚信  敏行"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_20" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/fzzzhf"
            android:text="专业  进取"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <View
        android:id="@+id/vDivider1"
        android:layout_width="@dimen/dp_2"
        android:layout_height="0dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintStart_toEndOf="@+id/llLeft"
        app:layout_constraintTop_toBottomOf="@+id/topDivider" />

    <LinearLayout
        android:id="@+id/llMiddle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintStart_toEndOf="@+id/vDivider1"
        app:layout_constraintTop_toBottomOf="@+id/topDivider"
        app:layout_constraintWidth_percent="0.3">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fzzzhj"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="公告栏"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_3"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </LinearLayout>

    <View
        android:id="@+id/vDivider2"
        android:layout_width="@dimen/dp_2"
        android:layout_height="0dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintStart_toEndOf="@+id/llMiddle"
        app:layout_constraintTop_toBottomOf="@+id/topDivider" />

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vDivider2"
        app:layout_constraintTop_toBottomOf="@+id/topDivider"
        app:layout_constraintWidth_percent="0.5">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fzzzhj"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="人员动态"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </LinearLayout>

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@+id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:padding="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivNetWork"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="invisible"
                app:srcCompat="@drawable/network" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_13"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:fontFamily="@font/fzzzhf"
            android:text="中本硕建设"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_12" />

        <TextClock
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:format12Hour="yyyy-MM-dd"
            android:format24Hour="yyyy-MM-dd"
            android:includeFontPadding="false"
            android:text="2022-02-02"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_12" />

        <TextClock
            android:id="@+id/tvWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:format12Hour="EEEE"
            android:format24Hour="EEEE"
            android:includeFontPadding="false"
            android:text="星期二"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_12" />

        <TextClock
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:format12Hour="HH:mm:ss"
            android:format24Hour="HH:mm:ss"
            android:includeFontPadding="false"
            android:text="22:22:22"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>